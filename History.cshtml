       <script>
        document.addEventListener('DOMContentLoaded', function () {
            const galleries = document.querySelectorAll('.gallery');
            galleries.forEach(gallery => {
                const galleryId = gallery.id;
                const slides = gallery.querySelectorAll('.slide');
                const dotsContainer = document.getElementById('dots-' + galleryId.split('-')[1]);

                slides.forEach((_, index) => {
                    const dot = document.createElement('div');
                    dot.classList.add('dot');
                    if (index === 0) dot.classList.add('active');
                    dot.onclick = function () {
                        currentSlideIndex[galleryId] = index;
                        updateSlideShow(galleryId);
                    };
                    dotsContainer.appendChild(dot);
                });

                if (!window.currentSlideIndex) window.currentSlideIndex = {};
                currentSlideIndex[galleryId] = 0;
            });
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('in-view');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.3 });
            document.querySelectorAll('.timeline-item').forEach(item => {
                observer.observe(item);
            });
        });
        function changeSlide(direction, galleryId) {              // Change Slide
            const gallery = document.getElementById(galleryId);
            const slides = gallery.querySelectorAll('.slide');
            currentSlideIndex[galleryId] = (currentSlideIndex[galleryId] + direction + slides.length) % slides.length;
            updateSlideShow(galleryId);
        }
        function updateSlideShow(galleryId) {                           // Update Slideshow
            const gallery = document.getElementById(galleryId);
            const slides = gallery.querySelectorAll('.slide');
            const dots = document.getElementById('dots-' + galleryId.split('-')[1]).querySelectorAll('.dot');
            slides.forEach((slide, index) => {
                slide.classList.remove('active');
                dots[index].classList.remove('active');
            });
            slides[currentSlideIndex[galleryId]].classList.add('active');
            dots[currentSlideIndex[galleryId]].classList.add('active');
        }
        setInterval(() => {                                  
            const galleries = document.querySelectorAll('.gallery');
            galleries.forEach(gallery => {
                if (!gallery.closest('.gallery-container').matches(':hover')) {
                    changeSlide(1, gallery.id);
                }
            });
        }, 4000);
        // Modal Functions
        function openModal(sectionId) {
            const modal = document.getElementById('timeline-modal');
            const section = document.getElementById(sectionId);
            const title = section.querySelector('.text-content h3').innerHTML;
            const description = section.querySelector('.text-content p').innerHTML;

            document.getElementById('modal-title').innerHTML = title;
            document.getElementById('modal-description').innerHTML = description;

            const modalGallery = document.getElementById('modal-gallery');
            modalGallery.innerHTML = '';

            const images = section.querySelectorAll('.slide img');
            images.forEach(img => {
                const imgContainer = document.createElement('div');
                imgContainer.classList.add('modal-image');
                const newImg = document.createElement('img');
                newImg.src = img.src;
                newImg.alt = img.alt;
                imgContainer.appendChild(newImg);
                modalGallery.appendChild(imgContainer);
            });

            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            const modal = document.getElementById('timeline-modal');
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

